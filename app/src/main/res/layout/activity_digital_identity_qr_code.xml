<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.inspur.lib_base.view.TitleView
        android:id="@+id/title_digital_identity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:ttTitleText="@string/app_name"
        app:ttLeftDrawable="@mipmap/ic_nav_back"
        app:ttRightDrawable="@mipmap/ic_go_scan"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_digital_identity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="14dp"
        android:background="@drawable/shape_circle_white_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_digital_identity"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="44dp"/>

        <TextView
            android:id="@+id/tv_qr_code_authority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBlackTheme"
            android:textColor="@color/color_666666"
            android:text="由济南XX公安局发布"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextBlackTheme"
            android:textColor="@color/color_999999"
            android:text="@string/marks_left_on_the_chain"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_id_qrcode_bottom_tip"
        android:scaleType="fitCenter"
        android:layout_marginBottom="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>