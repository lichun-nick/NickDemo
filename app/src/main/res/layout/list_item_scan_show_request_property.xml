<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/tv_request_voucher_detail_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_request_voucher_detail_item_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_request_voucher_detail_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_request_voucher_detail_item_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="3"
        android:gravity="center_vertical"
        android:textColor="@color/color_666666"
        android:textStyle="bold"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>