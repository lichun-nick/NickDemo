<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <com.inspur.lib_base.view.TitleView
        android:id="@+id/title_voucher_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:ttTitleText="@string/mine_voucher"
        app:ttLeftDrawable="@mipmap/ic_nav_back" />

    <LinearLayout
        android:id="@+id/ll_add_vouchers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_voucher_list"
        android:background="@drawable/shape_circle_blue_light_bg">

        <TextView
            style="@style/TextWhiteTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/mine_voucher"/>
        <TextView
            android:id="@+id/tv_voucher_count"
            style="@style/TextWhiteTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_marginLeft="10dp"
            android:text="@string/total_count"/>

        <ImageView
            android:id="@+id/iv_request_voucher"
            style="@style/ImageStyle"
            android:src="@mipmap/icon_add_voucher" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_voucher_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_add_vouchers"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_voucher_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>