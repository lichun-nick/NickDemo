<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_voucher_detail_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <com.inspur.lib_base.view.TitleView
        android:id="@+id/title_voucher_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:ttTitleText="@string/mine_voucher"
        app:ttLeftDrawable="@mipmap/ic_nav_back" />

    <LinearLayout
        android:id="@+id/ll_voucher_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_voucher_detail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_circle_white_bg">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_voucher_type_tip"
                style="@style/ImageStyle"
                android:layout_gravity="start"
                android:src="@mipmap/icon_id_card"/>

            <ImageView
                android:id="@+id/iv_voucher_edit"
                style="@style/ImageStyle"
                android:src="@mipmap/icon_more"
                android:layout_gravity="end"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_show"
        style="@style/ButtonTheme"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_voucher_detail"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/show"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/shape_circle_white_bg"/>

    <ImageView
        style="@style/ImageStyle"
        android:src="@mipmap/icon_id_qrcode_bottom_tip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>