<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WelcomeAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/color_FCFCFC</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>



    <style name="ButtonTheme" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_height">@dimen/input_text_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_text_corner_radius</item>
        <item name="boxBackgroundColor">@color/colorAccent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textColorHint">@color/color_999999</item>
    </style>
    <style name="TextInputEditTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/color_CCCCCC</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:drawablePadding">14dp</item>
    </style>
    <style name="CommonLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#E6E6E6</item>
    </style>
    <style name="CommonItemLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#E6E6E6</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginRight">13dp</item>
    </style>
    <style name="CommonVerticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#E6E6E6</item>
    </style>

</resources>
